# RC files (like .babelrc or .eslintrc)
*.*rc             text

# Archives
*.7z              binary
*.gz              binary
*.jar             binary
*.rar             binary
*.tar             binary
*.zip             binary

# Ignore files (like .npmignore or .gitignore)
*.*ignore         text

#
# Exclude files from exporting
#

.gitattributes export-ignore
.gitignore     export-ignore
.gitkeep       export-ignore
