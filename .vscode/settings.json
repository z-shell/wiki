{
  "prettier.configPath": ".trunk/config/prettierrc",
  "prettier.ignorePath": ".trunk/config/.prettierignore",
  "stylelint.configBasedir": ".trunk/config/.stylelintrc.yml",
  "markdownlint.config": {
    "extends": ".trunk/config/.markdownlint.yaml"
  },
  "conventionalCommits.scopes": [
    "maintenance",
    "library",
    "feature",
    "refactor",
    "style",
    "chore",
    "revert",
    "docs",
    "deps",
    "misc",
    "build",
    "perf",
    "test",
    "fix",
    "ci"
  ],
  "shellformat.useEditorConfig": true,
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "NOTE", "[ ]", "[x]"],
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "tools",
      "type": "line",
      "fontWeight": "bold",
      "iconColour": "#2fca2f",
      "background": "#00ff00",
      "opacity": 0.1
    },
    "BUG": {
      "icon": "bug",
      "type": "line",
      "fontWeight": "bold",
      "iconColour": "#ff0000",
      "background": "#ff0000",
      "opacity": 0.2
    },
    "HACK": {
      "icon": "tools"
    },
    "FIXME": {
      "icon": "flame",
      "type": "line",
      "fontWeight": "bold",
      "iconColour": "#ffff00",
      "background": "#ffff00",
      "opacity": 0.1
    },
    "NOTE": {
      "icon": "info",
      "type": "line",
      "fontWeight": "bold",
      "iconColour": "#0077ff",
      "background": "#0077ff",
      "opacity": 0.1
    }
  },
  "eslint.options": {
    "extensions": [".js", ".jsx", ".md", ".mdx", ".ts", ".tsx"],
    "eslint.validate": ["markdown", "mdx", "javascript", "javascriptreact", "typescript", "typescriptreact"]
  },
  "cSpell.enableFiletypes": [
    "editorconfig",
    "gitignore",
    "ini",
    "jsx",
    "jsx-tags",
    "mdx",
    "shellscript",
    "styled-css",
    "toml"
  ],
  "cSpell.customDictionaries": {
    "project-words": {
      "name": "project-words",
      "path": "${workspaceRoot}/.github/.cspell/project-words.txt",
      "description": "Words used in this project",
      "addWords": true
    },
    "project-ignored": {
      "name": "project-ignored",
      "path": "${workspaceRoot}/.github/.cspell/project-ignored.txt",
      "description": "Words ignored / not related to this project",
      "addWords": true
    },
    "project-usernames": {
      "name": "project-usernames",
      "path": "${workspaceRoot}/.github/.cspell/project-usernames.txt",
      "description": "Usernames used in this project",
      "addWords": true
    }
  },
  "cSpell.language": "en",
  "cSpell.autoFormatConfigFile": true,
  "grammarly.files.include": ["**/*.txt", "**/*.mdx", "**/*.md", "*/**.markdown"],
  "grammarly.config.documentDomain": "academic",
  "grammarly.config.suggestions.OxfordComma": true,
  "grammarly.config.suggestions.PassiveVoice": true,
  "grammarly.config.suggestions.StylisticFragments": true,
  "grammarly.config.suggestions.UnnecessaryEllipses": true,
  "grammarly.startTextCheckInPausedState": true,
  "eslint.packageManager": "pnpm",
  "editor.quickSuggestions": {
    "other": "inline"
  },
  "[markdown]": {
    "editor.fontSize": 14,
    "editor.lineHeight": 26,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 64,
    "editor.lineNumbers": "off",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    },
    "editor.minimap.enabled": false
  },
  "frontMatter.content.autoUpdateDate": false,
  "frontMatter.preview.host": "http://localhost:3000",
  "frontMatter.framework.startCommand": "pnpm start",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "boolean"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "id",
          "name": "id",
          "type": "string"
        },
        {
          "title": "image",
          "name": "image",
          "type": "string"
        },
        {
          "title": "keywords",
          "name": "keywords",
          "type": "choice",
          "choices": ["prezto", "oh-my-zsh", "migration"]
        },
        {
          "title": "sidebar_position",
          "name": "sidebar_position",
          "type": "datetime"
        }
      ]
    }
  ],
  "frontMatter.content.publicFolder": "build",
  "frontMatter.media.defaultSorting": "",
  "frontMatter.taxonomy.alignFilename": false,
  "frontMatter.telemetry.disable": true
}
